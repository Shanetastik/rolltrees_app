<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
	  <section>
	    <%= render 'shared/stats' %>
	  </section>
      <section>
		  <strong>Next order date:</strong> November 8th @ 10:00AM
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
	<div class="span8">
	      <h3>Current orders</h3>
	       <%= render 'shared/feed' %>
	    </div>
	  </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Roll Trees</h1>

    <h2>
      This is the home page for the beta platform Roll Trees, providing streamlined processes for the MMJ community. Interested?  Please apply for an account!
    </h2>

    <%= link_to "Apply now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

<% end %>